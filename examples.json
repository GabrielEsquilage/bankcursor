{
  "createUser": {
    "endpoint": {
      "method": "POST",
      "path": "/api/users"
    },
    "request": {
      "name": "John Doe",
      "email": "john.doe@example.com",
      "password": "securepassword123",
      "cpf": "12345678901",
      "address": {
        "zip_code": "01001000",
        "number": "123",
        "complement": "Apt 4B"
      }
    },
    "response": {
      "message": "User criado com sucesso",
      "data": {
        "id": 1,
        "email": "john.doe@example.com",
        "name": "John Doe",
        "account": {
          "account_number": "123456-7",
          "balance": "0.00"
        }
      }
    }
  },
  "login": {
    "endpoint": {
      "method": "POST",
      "path": "/api/users/login"
    },
    "email_example": {
      "identifier": "john.doe@example.com",
      "password": "securepassword123"
    },
    "cpf_example": {
      "identifier": "12345678901",
      "password": "securepassword123"
    },
    "account_number_example": {
      "identifier": "123456-7",
      "password": "securepassword123"
    }
  },
  "createAccount": {
    "endpoint": {
      "method": "POST",
      "path": "/api/accounts"
    },
    "request": {
      "user_id": "user_id_reference"
    }
  },
  "transfer": {
    "endpoint": {
      "method": "POST",
      "path": "/api/accounts/transactions"
    },
    "request": {
      "from_account_number": "account_number_sender",
      "to_account_number": "account_number_receiver",
      "value": 150.50
    }
  },
  "withdraw": {
    "endpoint": {
      "method": "POST",
      "path": "/api/accounts/withdraw"
    },
    "request": {
      "account_number": "account_number_reference",
      "value": 200.00
    }
  },
  "deposit": {
    "endpoint": {
      "method": "POST",
      "path": "/api/accounts/deposit"
    },
    "request": {
      "account_number": "account_number_reference",
      "value": 500.75
    }
  },
  "getTransactionStatus": {
    "endpoint": {
      "method": "GET",
      "path": "/api/accounts/transactions/transaction_id_reference"
    },
    "response": {
      "message": "Transaction retrieved successfully",
      "data": {
        "id": 1,
        "type": "deposit",
        "value": "500.75",
        "status": "completed",
        "from_account_id": 1,
        "to_account_id": null,
        "inserted_at": "2025-01-01T12:00:00Z"
      }
    }
  }
}